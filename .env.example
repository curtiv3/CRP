# Database
DATABASE_URL="postgresql://user:password@localhost:5432/contentrepurpose?schema=public"

# NextAuth
AUTH_SECRET="generate-a-random-secret-here"
AUTH_URL="http://localhost:3000"

# Google OAuth (optional)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# OpenAI
OPENAI_API_KEY=""

# S3/R2 Storage
S3_ENDPOINT="http://localhost:9000"
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_BUCKET="contentrepurpose"

# Redis (for BullMQ)
# IMPORTANT: Use password-authenticated Redis in production and bind to 127.0.0.1.
# Format: redis://:yourpassword@localhost:6379
REDIS_URL="redis://localhost:6379"

# Global API cost circuit breaker (cents)
# Hard caps on total OpenAI spend across ALL users. Processing is blocked
# when either limit is reached — last line of defence against runaway costs.
GLOBAL_HOURLY_COST_LIMIT_CENTS=500
GLOBAL_DAILY_COST_LIMIT_CENTS=5000

# Stripe Billing
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
# Create recurring price objects in Stripe Dashboard → Products
# Pro: $19/month, Growth: $39/month
STRIPE_PRO_PRICE_ID=""
STRIPE_GROWTH_PRICE_ID=""
