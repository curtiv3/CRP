generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  image         String?
  emailVerified DateTime?

  stripeCustomerId    String?
  subscriptionTier    SubscriptionTier @default(FREE)
  subscriptionStatus  SubscriptionStatus @default(ACTIVE)

  episodes      Episode[]
  contentPieces ContentPiece[]
  styleProfile  StyleProfile?
  accounts      Account[]
  usageRecords  UsageRecord[]
  usageBudget   UsageBudget?
  emailVerificationTokens EmailVerificationToken[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
}

model StyleProfile {
  id                  String   @id @default(cuid())
  userId              String   @unique
  tone                String   @default("mixed")
  vocabulary          Json     @default("{}")
  hookPatterns        Json     @default("[]")
  platformPreferences Json     @default("{}")
  sampleCount         Int      @default(0)

  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  updatedAt           DateTime @updatedAt
}

model Episode {
  id            String        @id @default(cuid())
  userId        String
  title         String
  description   String?
  sourceType    SourceType
  sourceUrl     String?
  fileKey       String?
  transcription String?
  status        EpisodeStatus @default(UPLOADING)
  duration      Int?
  errorMessage  String?

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  contentPieces ContentPiece[]
  usageRecords  UsageRecord[]

  processedAt   DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([userId])
  @@index([status])
}

model ContentPiece {
  id        String          @id @default(cuid())
  episodeId String
  userId    String
  platform  Platform
  type      ContentType
  content   String
  status    ContentStatus   @default(GENERATED)
  order     Int             @default(0)

  episode   Episode         @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@index([episodeId])
  @@index([userId])
}

model UsageRecord {
  id           String         @id @default(cuid())
  userId       String
  episodeId    String?
  operation    UsageOperation
  inputTokens  Int
  outputTokens Int
  cost         Float
  model        String

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  episode      Episode?       @relation(fields: [episodeId], references: [id], onDelete: SetNull)

  createdAt    DateTime       @default(now())

  @@index([userId])
  @@index([episodeId])
  @@index([createdAt])
}

model UsageBudget {
  id                    String   @id @default(cuid())
  userId                String   @unique
  monthlyLimitCents     Int
  currentMonthUsageCents Int     @default(0)
  lastResetAt           DateTime @default(now())

  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  updatedAt             DateTime @updatedAt
}

enum UsageOperation {
  TRANSCRIPTION
  ANALYSIS
  GENERATION
  STYLE_ANALYSIS
}

enum SubscriptionTier {
  FREE
  PRO
  GROWTH
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  INACTIVE
}

enum SourceType {
  UPLOAD
  YOUTUBE_URL
  PODCAST_URL
}

enum EpisodeStatus {
  UPLOADING
  TRANSCRIBING
  ANALYZING
  GENERATING
  COMPLETE
  FAILED
}

enum Platform {
  TWITTER
  LINKEDIN
  INSTAGRAM
  NEWSLETTER
  BLOG
  TIKTOK
}

enum ContentType {
  THREAD
  POST
  CAPTION
  DRAFT
  TIMESTAMPS
}

enum ContentStatus {
  GENERATED
  EDITED
  COPIED
  PUBLISHED
}
